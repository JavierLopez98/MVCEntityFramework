@model List<Doctor>

@{ 
    List<String> especialidades = ViewData["especialidades"] as List<String>;
}

<h1>Doctores por especialidad</h1>

<form method="post">
    <label>Salario</label>
    <input type="number" name="salario" class="form-control"/>
    <label>Especialidad</label>
    <select name="esp">
        <option value="" selected disabled hidden>Choose here</option>
        @foreach (String esp in especialidades)
        {
            <option value="@esp">@esp</option>
        }
    </select>
    <button type="submit">Modificar</button>
</form>

<hr />

<table class="table table-dark">
    <thead>
        <tr>
            <th>Apellido</th>
            <th>Salario</th>
            <th>Especialidad</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Doctor doc in Model)
        {
            <tr>
                <td>@doc.Apellido</td>
                <td>@doc.Salario</td>
                <td>@doc.Especialidad</td>
            </tr>
        }
    </tbody>
</table>