@model ICoche

<h1>Inyeccion de Dependencias</h1>

<div>
    <img style="width:200px;height:auto" src="~/images/@Model.Imagen" />
    <h1 style="color:blue">Marca: @Model.Marca, Modelo:@Model.Modelo</h1>
    <h2 style="color:red">Velocidad máxima: @Model.VelocidadMaxima km/h</h2>
</div>

<form method="post">
    <div>
        <button type="submit" class="btn-success" name="accion" value="acelerar">Acelerar</button>
        <button type="submit" class="btn-danger" name="accion" value="frenar">Frenar</button>
    </div>
</form>
<h2 style="color:brown">
    Velocidad actual:@Model.Velocidad km/h
</h2>